{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": ["on"],
    "reason-string": ["on"],
    "not-rely-on-time": ["on"],
    "var-name-mixedcase": ["on"]
  }
}
